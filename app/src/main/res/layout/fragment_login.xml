<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.LoginFragment"
    android:orientation="vertical"
    android:background="@drawable/login"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="60dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/cus_btn_login"
        >
        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng bạn trở lại"
            android:textColor="#2196F3"
            android:textStyle="bold"
            android:textSize="26dp"
            android:layout_gravity="start"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vui lòng đăng nhập để tiếp tục"
            android:textColor="#2196F3"

            android:layout_gravity="start"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/ed_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:hint="  Tài khoản"
            android:background="@drawable/cus_bgr_login"

            />
        <EditText
            android:id="@+id/ed_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:hint="  Mật khẩu"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:background="@drawable/cus_bgr_login"
            />

        <CheckBox
            android:id="@+id/chk_remember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="30dp"
            android:layout_gravity="start"
            android:text="Remember Me"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            />
    </LinearLayout>



</LinearLayout>